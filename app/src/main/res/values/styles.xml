<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="MyCardView" parent="AppTheme">
        <item name="android:layout_margin">@dimen/layout_margin_cardView</item>
    </style>

    <style name="TitleNote" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/layout_margin_title_text</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_title_text</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_title_text</item>
    </style>

    <style name="DescriptionNote" parent="AppTheme">
        <item name="android:layout_margin">@dimen/margin_description_text</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>